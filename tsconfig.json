{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES6", "dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES6",
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
